{
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-env --watch main.ts",
    "docker-build": "docker build . --platform linux/amd64 -t deno-proxy:latest",
    "docker-run": "docker run -it --rm --platform linux/amd64 --mount type=bind,source=./config.ts,target=/app/config.ts,readonly -p 3000:3000 -t deno-proxy:latest",
